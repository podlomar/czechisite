{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "lib": ["es2021"],
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}